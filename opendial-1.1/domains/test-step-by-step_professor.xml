<?xml version="1.0" encoding="UTF-8"?>
<domain>

   <initialstate>

      <variable id="u_m">
         <value>Welcome to CULPAConvo: CS Edition! You can ask about a professor or a course.
            Which would you like?
         </value>
      </variable>
   </initialstate>

	<!-- NLU model -->
	<model trigger="u_u">

       <!-- <rule id="ProfOrCourse">
           <case>
              <condition operator="or">
                 <if var="u_u" value="Course" relation="contains" />
                 <if var="u_u" value="Class" relation="contains" />
              </condition>
              <effect prof="1">
                 <set var="a_u" value="Request(Course)" />
              </effect>
           </case>
        </rule> -->
        <rule id="Professor">
			<case>
				<condition>
                   <if var="u_u" value="(Professor)? {LastName}" relation="contains"/>
                   <if var="LastName" relation="in" value="[Agarwal,Aho,Allen,Arabshian,Baset,Belhumeur,Bellovin,Biliris,Blaer,Burnside,Cannon,Carloni,Chaintreau,Chen,Choi,Chudnovsky,Collins,Creamer,Cui,Edwards,Elson,Fei,Feiner,Feldman,Galanter,Gravano,Grinspun,Gross,Habash,Hershkop,Hirschberg,Holliday,Huang,Isukapalli,Jebara,Kaiser,Kender,Keromytis,Kim,Lee,Leslie,Madduri,Malkin,Mauel,McKeown,Misra,Monteleoni,Morris,Nahum,Nayar,Nieh,Nowick,Papageorgiou,Pasik,Pe'er,Pender,Radev,Ramamoorthi,Reed,Ross,Rubenstein,Saraswat,Schulzrinne,Servedio,Sethumadhavan,Shaw,Sheth,Shortliffe,Sidorsky,Stein,Stolfo,Strickland,Traub,Unger,Vawdrey,Voris,Whalen,Wozniakowski,Yang,Yannkakis,Yee,Yemeni,Zhang,Zussman]"/>
				</condition>
				<effect>
                   <set var="a_u" value="RequestProf({LastName})" />
				</effect>
			</case>
            <case>
               <condition>
                   <if var="u_u" value="Julia Hirschberg" relation="contains"/>
                </condition>
                <effect>
                   <set var="a_u" value="RequestProf(Hirschberg)" />
				</effect>
             </case>

         </rule>
         <rule id="Course">
			<case>
                <condition operator="or">
                   <if var="u_u" value="NLP" relation="contains" />
                </condition>
                <effect prob="1">
                   <set var="a_u" value="RequestCourse(NLP)" />
                </effect>
             </case>
		</rule>
	</model>

	<!-- Action selection model -->
	<model trigger="a_u">

		<rule id="identifyProf">
			<case>
				<condition>
					<if var="a_u" value="RequestProf({X})" />
				</condition>
				<effect util="1">
					<set var="a_m" value="IdentifyProf({X})" />
				</effect>
			</case>
         </rule>
           
         <rule id="identifyCourse">
			<case>
				<condition>
					<if var="a_u" value="RequestCourse({X})" />
				</condition>
				<effect util="1">
					<set var="a_m" value="IdentifyCourse({X})" />
				</effect>
			</case>
         </rule>

         <rule id="confirm">
            <case>
               <condition>
                  <if var="a_u" value="Confirm({X})" />
               </condition>
               <effect util="1">
                  <set var="a_m" value="Confirm({X})" />
               </effect>
            </case>
         </rule>

		<rule id="repeat">
			<case>
				<effect util="0.2">
					<set var="a_m" value="AskRepeat" />
				</effect>
			</case>
		</rule>

	</model>


	<!-- NLG model -->
	<model trigger="a_m">
		<rule>
			<case>
				<condition>
					<if var="a_m" value="IdentifyProf({X})" />
				</condition>
				<effect util="1">
					<set var="u_m" value="Ok, looking up information about Professor {X}." />
				</effect>
			</case>
            <case>
				<condition>
					<if var="a_m" value="IdentifyCourse({X})" />
				</condition>
				<effect util="1">
					<set var="u_m" value="Ok, looking up information about {X}." />
				</effect>
			</case>

            <case>
               <condition>
                  <if var="a_m" value="Confirm({X})" />
               </condition>
               <effect util="1">
                    <set var="u_m" value="I'm sorry, you want {X} what?" />
                 </effect>
              </case>
            <case>
				<condition>
					<if var="a_m" value="AskRepeat" />
				</condition>
				<effect util="1">
					<set var="u_m" value="Sorry, could you repeat?" />
				</effect>
			</case>
		</rule>
	</model>



	<!-- Prediction model for the next user dialogue act -->
	<model trigger="a_m">

		<rule>
			<case>
				<condition>
					<if var="a_m" value="AskRepeat" />
				</condition>
				<effect prob="0.5">
					<set var="a_u^p" value="{a_u}" />
				</effect>
			</case>
		</rule>
	</model>


</domain>
